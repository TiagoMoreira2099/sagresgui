/**
 * Implements hook_preprocess_page().
 */
function sagres_preprocess_page(&$variables) {
  // Obtém o título das configurações do sagres
  $config = \Drupal::config('sagres.settings');
  $title = $config->get('title');

  // Adiciona a variável para o template
  $variables['sagres_title'] = $title;

  // Adiciona CSS inline para alinhamento vertical
  $style = '
    .navbar-brand {
      display: flex !important;
      align-items: center !important;
      font-size: 2.5rem!important;
      margin-top: 0;
      margin-bottom: .5rem;
      font-weight: 500;
      line-height: 1.2;
    }
    .navbar-brand img {
      margin-right: 10px;
    }
  ';

  $variables['#attached']['html_head'][] = [
    [
      '#type' => 'html_tag',
      '#tag' => 'style',
      '#value' => $style,
    ],
    'sagres_navbar_style'
  ];

}

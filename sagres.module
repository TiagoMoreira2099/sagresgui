/**
 * Implements hook_preprocess_html().
 */
function sagres_preprocess_html(&$variables) {
  $variables['attributes']['class'][] = 'sagres-module-enabled';
}

/**
 * Implements hook_page_attachments().
 */
function sagres_page_attachments(array &$attachments) {
  // Sempre carrega o sagres-overrides
  $attachments['#attached']['library'][] = 'sagres/sagres-overrides';

  // Obtém o nome da rota atual
  $route_name = \Drupal::routeMatch()->getRouteName();

  // Verifica se a rota começa com 'sagres.'
  if (strpos($route_name, 'sagres.') === 0) {
    $attachments['#attached']['library'][] = 'sagres/sagres-styles';
  }

  // Obtém o título das configurações do sagres
  $config = \Drupal::config('sagres.settings');
  $title = $config->get('title');
  $subTitle = $config->get('subTitle');
  // Altera o nome do site
  \Drupal::configFactory()
    ->getEditable('rep.settings')
    ->set('site_name', $title)
    ->save();

  // Atualiza a configuração do nome do site
  \Drupal::configFactory()
    ->getEditable('system.site')
    ->set('name', $title)
    ->save();

  // Obtém o caminho do logo definido nas configurações do módulo
  $config = \Drupal::config('sagres.settings');
  $logo_path = base_path() . 'modules/custom/sagres/images/ciencia_logo_150.png'; // Caminho padrão

  // Se você quiser garantir que o logo padrão não seja usado
  \Drupal::configFactory()
    ->getEditable('system.theme.' . \Drupal::theme()->getActiveTheme()->getName())
    ->set('logo.path', $logo_path)
    ->set('logo.use_default', FALSE)
    ->save();

  //dpm($logo_path);
  //dvr(theme_get_setting('logo.path', \Drupal::theme()->getActiveTheme()->getName()));
}


/**
 * Implements hook_block_view_alter().
 */
function sagres_block_view_alter(array &$build, \Drupal\Core\Block\BlockPluginInterface $block) {
  // Verifica se o bloco é o "block-hasco-barrio-page-title".
  if ($block->getBaseId() === 'page_title_block') {
    // Verifica se a rota atual é "sagres.landing_page".
    if (\Drupal::routeMatch()->getRouteName() === 'sagres.landing_page') {
      // Remove o conteúdo do bloco.
      $build = [];
    }
  }
}

